{
  "name": "omni-annotator",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsx scripts/build.ts",
    "dev": "tsx scripts/dev.ts",
    "lint": "pnpm prettier && pnpm eslint && pnpm tscheck",
    "eslint": "eslint . --cache --fix",
    "tscheck": "tsc --noEmit",
    "prettier": "prettier . --cache --write --ignore-unknown",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.30.1",
    "@pnpm/sort-packages": "^1000.0.8",
    "@pnpm/workspace.find-packages": "^1000.0.27",
    "@pnpm/workspace.pkgs-graph": "^1000.0.15",
    "@pnpm/workspace.read-manifest": "^1000.2.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.0.12",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.3.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0",
    "vite": "^7.0.3",
    "vite-plugin-dts": "^4.5.4"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx --no -- commitlint --edit $1"
  },
  "lint-staged": {
    "*": [
      "prettier --cache --write --ignore-unknown",
      "eslint --cache --fix"
    ],
    "**/*.{ts,tsx}": [
      "sh -c 'pnpm tscheck'"
    ]
  }
}
