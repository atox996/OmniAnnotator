{
  "compilerOptions": {
    /* ================= 核心配置 ================= */
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "target": "ESNext",
    "verbatimModuleSyntax": true,

    /* ================= 类型检查 ================= */
    "allowJs": true,
    "checkJs": true,
    "strict": true,

    /* ================= 模块解析 ================= */
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,

    /* ================= 编译选项 ================= */
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@omni-annotator/renderer/2d": ["packages/renderer/src/2d"],
      "@omni-annotator/renderer/3d": ["packages/renderer/src/3d"],
      "@omni-annotator/*": ["packages/*/src"]
    }
  },
  "exclude": ["node_modules", "**/dist"]
}
