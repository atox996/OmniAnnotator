{
  "compilerOptions": {
    /* ================= 核心配置 ================= */
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "target": "ESNext",
    "verbatimModuleSyntax": true,

    /* ================= 类型检查 ================= */
    "allowJs": true,
    "checkJs": true,
    "strict": true,

    /* ================= 模块解析 ================= */
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,

    /* ================= 编译选项 ================= */
    "noEmit": true
  },
  "exclude": ["node_modules", "**/dist"]
}
